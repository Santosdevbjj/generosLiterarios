            livros = gerenciador.buscar_livros(filtro, valor)
            if livros:
                 print("\n--- Livros Encontrados ---")
                 for livro in livros:
                     print(livro)
            else:
                print("Nenhum livro encontrado.")

        elif escolha == '4':
            id_deletar = _input_int("Digite o ID do livro para deletar: ")
            gerenciador.deletar_livro(id_deletar)

